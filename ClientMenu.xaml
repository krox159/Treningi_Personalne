<Window x:Class="TreningiPersonalne.ClientMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreningiPersonalne"
        mc:Ignorable="d"
        Title="ClientMenu" Height="450" Width="800">
    <Grid>
        <Label Content="Panel Klienta:&#xD;&#xA;Użytkownik: " HorizontalAlignment="Left" Margin="43,36,0,0" VerticalAlignment="Top" Height="46" Width="103"/>
        <Button Content="Zapisz się na trening" HorizontalAlignment="Left" Margin="29,101,0,0" VerticalAlignment="Top" Height="49" Width="152" Click="RegisterTraining"/>
        <Button Content="Odwołaj trening" HorizontalAlignment="Left" Margin="30,168,0,0" VerticalAlignment="Top" Height="49" Width="151" Click="DeleteTraining"/>
        <Button Content="Wyświetl swoje rezerwacje" HorizontalAlignment="Left" Margin="30,236,0,0" VerticalAlignment="Top" Height="49" Width="151" Click="ShowTrainings"/>
        <Button Content="Wyloguj" HorizontalAlignment="Left" Margin="30,342,0,0" VerticalAlignment="Top" Height="49" Width="129" Click="LogoutClient"/>
        <Label Content="{Binding Source=ClientName}" HorizontalAlignment="Left" Margin="130,52,0,0" VerticalAlignment="Top" Height="25" Width="135" Name="ClientUsernameValue"/>

    </Grid>
</Window>
